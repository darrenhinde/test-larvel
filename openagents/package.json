{
  "name": "openagents",
  "version": "0.1.0",
  "description": "OpenCode plugin for custom AI agents and workflows",
  "type": "module",
  "main": "dist/plugin.js",
  "types": "dist/plugin.d.ts",
  "exports": {
    ".": {
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.js",
      "types": "./dist/plugin.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/plugin/index.ts --outfile dist/plugin.js --target bun --format esm",
    "clean": "rm -rf dist",
    "dev": "bun run --watch src/plugin/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.162",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.2.14",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.0.0"
  },
  "keywords": [
    "opencode",
    "agents",
    "ai",
    "plugin"
  ],
  "license": "MIT"
}
